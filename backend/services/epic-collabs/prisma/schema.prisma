// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id        Int      @default(autoincrement()) @id
  bio       String?
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model User {
  id                Int        @default(autoincrement()) @id
  email             String     @unique
  name              String
  Profile           Profile
  followingProjects Project[]  @relation("ProjectUserFollow", references: [id])
  owningProjects    Project[]  @relation("ProjectsUserOwns")
  Position          Position[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @default(now())
}

model Position {
  id          Int       @default(autoincrement()) @id
  name        String
  description String
  User        User[]
  projects    Project[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
}

model Category {
  id        Int       @default(autoincrement()) @id
  name      String
  projects  Project[] @relation(references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}

model Project {
  id               Int        @default(autoincrement()) @id
  name             String
  thumbnail        String
  cover            String
  description      String
  shortDescription String
  owner            User       @relation("ProjectsUserOwns", fields: [ownerId], references: [id])
  ownerId          Int
  positions        Position[] @relation(references: [id])
  followers        User[]     @relation(name: "ProjectUserFollow", references: [id])
  categories       Category[] @relation(references: [id])
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @default(now())
}
