{
  "compilerOptions": {
    "outDir": ".build",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2019",
    "module": "commonjs",
    "types": ["node", "jest"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", ".build", ".serverless", ".webpack", ".vscode", "**/*.spec.ts", "**/*.test.ts"]
}
